{
  "name": "ladybird-playwright-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for Ladybird browser with Sentinel security features",
  "scripts": {
    "test": "playwright test",
    "test:p0": "playwright test --grep @p0",
    "test:p1": "playwright test --grep '@p0|@p1'",
    "test:p2": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "report": "playwright show-report",
    "codegen": "playwright codegen",
    "test-server": "node test-server.js",
    "test-server-alt": "PORT=8081 node test-server.js",
    "servers": "concurrently \"npm run test-server\" \"npm run test-server-alt\"",
    "server:start": "node test-server.js",
    "server:health": "curl http://localhost:8080/health"
  },
  "keywords": [
    "playwright",
    "e2e",
    "browser-testing",
    "ladybird",
    "sentinel",
    "security"
  ],
  "author": "rbsmith4",
  "license": "BSD-2-Clause",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
